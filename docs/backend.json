{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the NextVerseEducation platform.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity."
        },
        "name": {
          "type": "string",
          "description": "User's full name."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        }
      },
      "required": [
        "id",
        "name",
        "email"
      ]
    },
    "Course": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Course",
      "type": "object",
      "description": "Represents an educational course.",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the course."
        },
        "description": {
          "type": "string",
          "description": "A brief description of the course content."
        },
        "subject": {
          "type": "string",
          "description": "The general subject area of the course (e.g., 'Engineering', 'Health Science')."
        },
        "image": {
          "type": "string",
          "description": "ID of a placeholder image for the course."
        }
      },
      "required": [
        "title",
        "description",
        "subject",
        "image"
      ]
    },
    "Video": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Video",
      "type": "object",
      "description": "Represents an educational video within a course.",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the video."
        },
        "youtubeId": {
          "type": "string",
          "description": "The ID of the video on YouTube."
        }
      },
      "required": [
        "title",
        "youtubeId"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/courses/{courseId}",
        "definition": {
          "entityName": "Course",
          "schema": {
            "$ref": "#/entities/Course"
          },
          "description": "Stores course metadata. Videos for each course are stored in a subcollection.",
          "params": [
            {
              "name": "courseId",
              "description": "The unique identifier for the course."
            }
          ]
        }
      },
      {
        "path": "/courses/{courseId}/videos/{videoId}",
        "definition": {
          "entityName": "Video",
          "schema": {
            "$ref": "#/entities/Video"
          },
          "description": "Stores video metadata for a specific course.",
          "params": [
            {
              "name": "courseId",
              "description": "The unique identifier for the course."
            },
            {
              "name": "videoId",
              "description": "The unique identifier for the video."
            }
          ]
        }
      }
    ]
  }
}
